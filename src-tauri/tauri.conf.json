{
  "productName": "Fullscreen Clock",
  "version": "1.0.0",
  "identifier": "com.ncl.fullscreenclock",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Fullscreen Clock",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "url": "clock.html"
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/icon.png",
      "icons/icon.ico"
    ]
  }
}
